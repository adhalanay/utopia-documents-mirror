ARCH=`uname -s`
if [ x"${ARCH}" = x"MINGW32_NT-5.1" ]; then
    ARCH="Windows"
fi
if [ x"${ARCH}" = x"MINGW32_NT-6.1" ]; then
    ARCH="Windows"
fi

